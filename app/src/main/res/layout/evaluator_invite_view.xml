<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    app:cardCornerRadius="5dp"
    android:elevation="90dp"
    android:layout_margin="8dp"
    android:id="@+id/evaluator_card"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="horizontal"
        android:background="@color/lightblue_white"
        android:gravity="center"
        >
        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="0.6"
            android:layout_gravity="center"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/evaluator_profile_image"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_margin="10dp"
                android:layout_marginTop="15dp"
                android:layout_marginBottom="15dp"
                android:scaleType="centerCrop"
                app:civ_border_color="@color/darkblue"
                app:civ_border_width="2dp" />

            <ProgressBar
                android:id="@+id/progress_image_loader"
                android:layout_margin="10sp"
                android:layout_width="match_parent"
                android:layout_gravity="center"
                android:layout_height="match_parent" />
        </FrameLayout>




        <LinearLayout
            android:layout_width="140dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_vertical"
            >

            <TextView
                android:id="@+id/evaluator_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:fontFamily="@font/bold"
                android:textColor="@color/darkblue"
                android:textSize="12dp"

                />
            <TextView
                android:id="@+id/evaluator_email"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:textSize="12dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/darkblue"
                />
            <TextView
                android:id="@+id/evaluator_level"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:textSize="12dp"
                android:fontFamily="@font/regular"
                android:textColor="@color/darkblue"
                />


        </LinearLayout>


            <Button
                android:id="@+id/invite_evaluator"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
               android:layout_marginRight="10dp"
                android:layout_weight="0.1"
                android:background="@drawable/button"
                android:fontFamily="@font/bold"
                android:text="Invite"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:textSize="10dp"
                app:backgroundTint="@color/darkblue_1" />


    </LinearLayout>


</androidx.cardview.widget.CardView>