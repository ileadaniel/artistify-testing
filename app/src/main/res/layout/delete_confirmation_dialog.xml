<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="15dp"
    app:cardCornerRadius="5dp">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/lightblue_white"
        >
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure?"
            android:textSize="22sp"
            android:gravity="center"
            android:layout_margin="15dp"
            android:textColor="@color/darkblue"
            android:fontFamily="@font/bold"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="Deleting this account will result in completely removing your account from the system,\nthis means you won't be able to access the app from this account anymore.\nPlease keep in mind that your account history will still remain in the database."
            android:gravity="center|start"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="@color/darkblue_1"
            android:fontFamily="@font/regular"
            />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter your password:"
            android:textSize="16sp"
            android:textColor="@color/darkblue_1"
            android:fontFamily="@font/bold"
            android:layout_marginTop="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:orientation="horizontal"
            android:gravity="center"
            >

            <EditText
                android:id="@+id/password_field_delete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Type password..."
                android:textColorHint="@color/darkblue_1"
                android:textColor="@color/darkblue_1"
                android:inputType="textPassword"
                android:padding="10sp"
                android:gravity="start"
                android:textSize="15sp"
                android:background="@drawable/input_field" />

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_margin="10dp"
            android:gravity="end"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/cancel_account_delete"
                android:text="Cancel"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/bold"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/confirm_account_delete"
                android:text="Confirm"
                android:textSize="18sp"
                android:layout_margin="10dp"
                android:padding="10dp"
                android:textColor="@color/darkblue"
                android:fontFamily="@font/bold"
                />
        </LinearLayout>
    </LinearLayout>

</androidx.cardview.widget.CardView>