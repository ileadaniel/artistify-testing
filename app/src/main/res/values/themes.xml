<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Artistify" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/lightblue</item>
        <item name="colorPrimaryVariant">@color/lightblue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/lightblue</item>
        <item name="colorSecondaryVariant">@color/lightblue</item>
        <item name="colorOnSecondary">@color/darkblue_1</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/darkblue</item>
        <!-- Customize your theme here. -->

        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>

        <item name="radioButtonStyle">@style/Widget.App.RadioButton</item>

        <item name="colorOnSurface">@color/darkblue</item>

    </style>
    <style name="Widget.App.RadioButton" parent="Widget.MaterialComponents.CompoundButton.RadioButton">
        <item name="materialThemeOverlay">@style/ThemeOverlay.App.RadioButton</item>
    </style>

    <style name="ThemeOverlay.App.RadioButton" parent="">
        <item name="colorOnSurface">@color/darkblue</item>
        <item name="colorSecondary">@color/darkblue</item>
    </style>


    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/darkblue</item>
        <item name="fontFamily">@font/bold</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/darkblue</item>
        <item name="fontFamily">@font/bold</item>

    </style>
    <style name="MyRadioButtonStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/darkblue</item>
        <item name="buttonTint">@color/darkblue</item>
    </style>
    <style name="MyRadioButtonRatingStyle" parent="Widget.AppCompat.CompoundButton.RadioButton">
        <item name="android:textColor">@color/darkblue_1</item>
        <item name="buttonTint">@color/darkblue_1</item>
        <item name="colorControlNormal">@color/darkblue_1</item>
        <item name="colorControlActivated">@color/darkblue_1</item>
    </style>

    <style name="mySpinnerItemStyle1" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/darkblue</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="mySpinnerItemStyle2" parent="android:Widget.DropDownItem.Spinner">
        <item name="android:textColor">@color/darkblue_1</item>
        <item name="android:textSize">16sp</item>
    </style>



    <style name="DatePickerButtonStyle" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:textColor">@color/darkblue</item>
    </style>

</resources>